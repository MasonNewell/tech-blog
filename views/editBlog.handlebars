<div class="d-flex row justify-content-center text-center">
  <div class="rounded col-7 p-2">
    <div class="card">
      <div class="card-header">{{post_title}}</div>
      <div class="card-body">
        <div class="card-title">Posted by:
          {{user.name}}
          on
          {{date_created}}
        </div>
        <p class="card-text">
          {{post_contents}}
        </p>
        <button class="btn btn-warning del-btn" id={{id}}>Delete Post</button>
      </div>
    </div>
  </div>

  <div class="rounded col-6 py-2">
    <form class="edit-blog-form">
      <div class="py-2">
        <label for="post_title">New Title:</label>
        <input name="post_title" class="form-control" type="text" id="post_title" />
      </div>
      <div class="py-2">
        <label for="post_contents">New Content Info:</label>
        <input type="text" class="form-control" name="post_contents" id="post_contents" />
      </div>
      <button class="btn btn-info update-btn" id="{{id}}">Update Post</button>
    </form>
  </div>
</div>

<script src="/js/blog.js"></script>